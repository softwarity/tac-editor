{
  "name": "SIGMET WC",
  "version": "1.0.0",
  "description": "SIGMET TC: Tropical cyclone",
  "extends": "sigmet",
  "category": "WC",
  "suggestions": {
    "declarations": [
      {
        "id": "sigmet_wc_full",
        "ref": "identifier",
        "provider": "sigmet-wc-fir-location-indicator",
        "suffix": " SIGMET",
        "text": "AAAA SIGMET",
        "description": "SIGMET WC message (enter FIR code)",
        "placeholder": "AAAA SIGMET",
        "editable": [
          {
            "start": 0,
            "end": 4
          }
        ]
      },
      {
        "id": "tc_kw",
        "ref": "tc",
        "text": "TC",
        "description": "Tropical cyclone"
      },
      {
        "id": "tc_name",
        "ref": "tcName",
        "provider": "sigmet-tc-cyclone-name",
        "pattern": "[A-Z][A-Z\\-]+",
        "description": "Cyclone name",
        "placeholder": "NAME",
        "editable": [
          {
            "start": 0,
            "end": 4,
            "pattern": "[A-Z][A-Z\\-]+",
            "description": "Cyclone name"
          }
        ]
      }
    ],
    "after": {
      "start": [
        "sigmet_wc_full"
      ],
      "fir": [
        "tc_kw"
      ],
      "uir": [
        "tc_kw"
      ],
      "firUir": [
        "tc_kw"
      ],
      "cta": [
        "tc_kw"
      ],
      "statusTest": [
        "tc_kw"
      ],
      "statusExer": [
        "tc_kw"
      ],
      "tc": [
        "tc_name"
      ],
      "tcName": [
        "obs_kw",
        "fcst_kw"
      ]
    }
  }
}
