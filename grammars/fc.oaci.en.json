{
  "name": "TAF Short",
  "version": "1.0.0",
  "description": "TAF Short: Terminal aerodrome forecast (up to 12 hours)",
  "extends": "taf",
  "identifier": "TAF",
  "suggestions": {
    "items": {
      "validityPeriod": []
    },
    "after": {
      "issueTime": [
        "validityPeriod"
      ]
    }
  },
  "tokens": {
    "validityPeriod": {
      "pattern": "^\\d{4}\\/\\d{4}$",
      "category": "datetime",
      "description": "Validity period Y1Y1G1G1/Y2Y2G2G2 (max 12h)",
      "validator": "DDHH/DDHH-short",
      "placeholder": {
        "value": "0000/0000",
        "editable": [
          {
            "start": 0,
            "end": 2
          },
          {
            "start": 2,
            "end": 4
          },
          {
            "start": 5,
            "end": 7
          },
          {
            "start": 7,
            "end": 9
          }
        ]
      }
    }
  }
}
